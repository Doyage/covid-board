generator client {
  provider = "prisma-client-js"
  seed     = "ts-node ./seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GlobalStat {
  id        Int      @id @default(autoincrement())
  cc        String   @db.Char(2)
  date      DateTime @db.Date
  confirmed Int
  death     Int?
  released  Int?
  tested    Int?
  testing   Int?
  negative  Int?

  @@unique([cc, date], name: "ccWithDate")
}

model KeyValue {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model Country {
  cc              String @id @db.Char(2)
  flag              String
  name_en           String
  name_ko           String
  name_ja           String
  population        BigInt
  worldometer_title String
}
